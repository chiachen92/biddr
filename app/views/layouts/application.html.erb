<!DOCTYPE html>
<html>
  <head>
    <title>JenBiddr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Biddr", root_path, class: "navbar-brand", id: "logo" %>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
            <li><%= link_to "New Auction", new_auction_path %></li>
              <li><% if user_signed_in? %></li>
              <li><%= link_to 'Sign out', sessions_path, method: :delete %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" id="icon">Hello <%=current_user.first_name %><span class="caret"></span></a>
                  <ul class="dropdown-menu">
                
                    <% else %>
                    <li><%= link_to 'Sign in', new_session_path, id: "icon" %></li>
                    <li><%= link_to 'Sign up', new_user_path, id: "icon" %></li>
                  <% end %>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <%= yield %>
  </body>
</html>
